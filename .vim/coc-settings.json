{
  "languageserver": {
    "csharp-ls": {
      "command": "csharp-ls",
      "filetypes": ["cs"],
      "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
    },
    "cmake": {
      "command": "neocmakelsp",
      "args": ["--stdio"],
      "filetypes": ["cmake"],
      "rootPatterns": [
        "build/"
      ],
      "initializationOptions": {
        "buildDirectory": "build"
      }
    }
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "cs"
  ],
  "html.completion.attributeDefaultValue": "empty"
}
